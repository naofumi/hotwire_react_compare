<table class="border">
  <thead>
    <th class="border p-1">Title</th>
    <th class="border p-1">Body</th>
    <th class="border p-1">CreatedAt</th>
    <th class="border p-1">AuthorName</th>
    <th class="border p-1">AuthorEmail</th>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td class="border p-1"><%= post.title %></td>
      <td class="border p-1"><%= post.body %></td>
      <td class="border p-1"><%= l post.created_at, format: :short %></td>
      <td class="border p-1"><%= post.author.name %></td>
      <td class="border p-1"><%= post.author.email %></td>
    </tr>
  <% end %>
  </tbody>
</table>
